<!-- fragment_item_doctor.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Your item layout goes here -->
        <!-- RecyclerView in ItemDoctorFragment -->
        <androidx.recyclerview.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list"
            android:name="com.example.healthcare2.ItemDoctorFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ItemDoctorFragment"
            tools:listitem="@layout/fragment_item_doctor" />

        <!-- Include elements like ImageView, TextView, etc. to represent a single item -->

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
